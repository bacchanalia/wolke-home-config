#!/usr/bin/perl
use strict;
use warnings;

my $src = '/home/wolke';
my $dest = '/media/HOME_BACKUP/wolke';

if(not -e $dest){
  die "Destination not found: $dest\n";
}

my $cmd = "sudo rsync -av --delete-during --exclude=.gvfs $src/ $dest";
print "Press enter to run, or ctrl+c to quit:\n";
print "$cmd\n";
if(readline){
  exec $cmd;
}
