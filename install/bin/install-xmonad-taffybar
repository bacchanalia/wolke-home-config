#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

sub main(@) {
    run qw(sudo apt-get install git haskell-platform xmonad
                                libcairo2-dev
                                libglib2.0-dev
                                libgtk2.0-dev
                                libpango1.0-dev
                                libxml2-dev
          );
    run qw(cabal update);
    run qw(cabal install
      runghc
      cassava
      gtk2hs-buildtools
      regex-pcre-builtin unixutils utf8-string monad-loops json errors
      cmdargs pureMD5 transformers tagged semigroups data-default dlist
      entropy cereal X11 syb binary largeword posix-timer split hlint
    );

    $ENV{PATH} = "$ENV{HOME}/.cabal/bin:$ENV{PATH}";
    installFromGit "git://github.com/teleshoes/taffybar.git";

    my @dm = qw(mdm gdm kdm lightdm slim wdm xdm nodm);
    tryrun qw(sudo pkill -f), $_ foreach @dm;
    run qw(sudo apt-get -y purge), @dm;
}

main @ARGV;
