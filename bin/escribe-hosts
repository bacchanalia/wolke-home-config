#!/usr/bin/perl
use strict;
use warnings;

my $hostsFile = "/etc/hosts";

sub getHosts();

my $escribe = [
  'garuda'    => '10.1.11.11',
  'dev'       => '10.1.12.19',
  'dev1'      => '172.18.10.91',
  'dev2'      => '172.18.10.92',
  'datadict'  => '10.1.12.21',
  'source'    => '10.1.12.10',
  'trac'      => '10.1.12.11',
  'build'     => '10.1.12.20',
  'demo'      => '10.1.7.11',
  'proxy'     => '10.1.4.8',
  'web'       => '10.1.14.20',
  'backupa'   => '10.1.4.13',
  'tx'        => '172.18.10.15',
  'edi'       => '10.1.3.12',
  'monitor'   => '10.1.11.9',
  'web.escribehost.com' => '10.1.14.20',
  'escribehost.com'     => '10.1.14.20',
#  'cchit'     => '10.1.13.19',
#  'stage'     => '10.1.13.12',
#  'demo-edge' => '10.1.7.12',
#  'qa'        => '10.1.13.13',
];

sub main(@){
  die "Cannot run $0 as root\n" if `whoami` eq "root\n";
  die "Usage: $0\n" if @_ != 0;

  my @hostLines = getHosts();

  for(my $i=0; $i<@$escribe; $i+=2){
    my ($host, $ip) = ($$escribe[$i], $$escribe[$i+1]);
    push @hostLines, "$ip\t$host.escribe.com #escribe-host\n" if $host !~ /\./;
    push @hostLines, "$ip\t$host #escribe-host\n";
  }

  print "\n\nhosts:\n";
  open FH, "| sudo tee $hostsFile" or die "Could not write to $hostsFile\n";
  print FH @hostLines;
  close FH;
}

sub getHosts(){
  open FH, "< $hostsFile" or die "Could not read $hostsFile\n";
  my @lines = <FH>;
  close FH;

  #remove lines with comment #escribe-host at the end
  for my $line(@lines){
    $line = '' if $line =~ /#escribe-host$/;
  }
  return @lines;
}

&main(@ARGV);
