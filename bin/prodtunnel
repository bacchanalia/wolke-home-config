#!/bin/bash

if [ $1 = on ];
then
  if [ $# != 3 ];
  then
    echo "Usage [on escribe_server port] | [off]";
    exit;
  fi

  if [ -e /tmp/prodtunnelssh.ctl ]
  then
    echo Control file already exists, run $0 off
  else
    ssh -M -S /tmp/prodtunnelssh.ctl -f ewolk@$2.escribe.com -L $3:$2.escribe.com:$3 -N
  fi
elif [ $1 = off ];
then
  if [ $# != 1 ];
  then
    echo "Usage [on [escribe server]] | [off]";
    exit;
  fi
  
  ssh -S /tmp/prodtunnelssh.ctl -O exit localhost
else
  echo "Usage [on [escribe server]] | [off]";
  exit;
fi

