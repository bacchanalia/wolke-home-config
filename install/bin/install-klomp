#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

sub installFromDir($);

sub main(@) {
    # TODO do not assume configured src dir
    cd "$ENV{HOME}/Code/klomp";
    shell "git pull";
    shell "yes | ./dependency-install.pl";
    shell "./install.pl"
}

main @ARGV;

