#!/usr/bin/perl
use strict;
use warnings;

my $dir = `echo -n \$HOME/.xmonad/workspace-images`;
my $ws = shift;
my $wt = shift;

my $target = "$dir/$ws.xbm";

my $img;
if($wt =~ /firefox/i){
  $img = "\$HOME/.dzen2/icons/36x36/firefox.xbm";
}elsif($wt =~ /vim/i){
  $img = "\$HOME/.dzen2/icons/36x36/vim.xbm";
}elsif($wt =~ /terminal/i){
  $img = "\$HOME/.dzen2/icons/36x36/terminal.xbm";
}elsif($wt =~ /pidgin/i){
  $img = "\$HOME/.dzen2/icons/36x36/pidgin/pidgin-tray-available.xbm";
}elsif($wt eq ''){
  $img = "\$HOME/.dzen2/icons/36x36/none.xbm";
}else{
  $img = "\$HOME/.dzen2/icons/36x36/questionmark.xbm";
}

system "cp $img $target";
