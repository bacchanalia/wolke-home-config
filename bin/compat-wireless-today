#!/bin/bash
BASE_URL=http://wireless.kernel.org/download/compat-wireless-2.6
BLEEDING_EDGE=compat-wireless-`date -I`
TAR=$BLEEDING_EDGE.tar.bz2
URL=$BASE_URL/$TAR

wget $URL
if [ -e $TAR ]; then
  tar -xf $TAR
  cd $BLEEDING_EDGE
  make
  sudo make install
  sudo make unload
  sudo make load
else
  echo error in obtaining $URL
  exit 1
fi

