#!/usr/bin/perl
use strict;
use warnings;

my $folderDir = `echo -n \$HOME/Desktop`;
my $iconDir = `echo -n \$HOME/Desktop/Icons/humanity-folders`;

my %folderIcons = (
  'Documents'              => 'folder-documents.svg',
  'Music'                  => 'folder-music.svg',
  'Pictures'               => 'folder-pictures.svg',
  'Videos'                 => 'folder-video.svg',
  'Games'                  => 'custom-folder-games.png',
  'Science'                => 'custom-folder-science.png',
  'Backgrounds'            => 'custom-folder-backgrounds.png',
  'Porn'                   => 'custom-folder-porn.png',
  'Euler'                  => 'custom-folder-euler.png',
  'Literature Books Manga' => 'custom-folder-literature.png',
  'Final Fantasy'          => 'custom-folder-finalfantasy.png',
  'Downloads'              => 'folder-download.svg',
  'Torrents'               => 'custom-folder-torrents-nonfree.png',
  'N900'                   => 'custom-folder-n900.png',
  'Stepmania Songlibrary'  => 'custom-folder-stepmania.png',
);

for my $folder(keys %folderIcons){
  my $icon = $folderIcons{$folder};
  $folder =~ s/'/'\\''/g;
  $icon =~ s/'/'\\''/g;
  system "mkdir -p '$folderDir/$folder'";
  system "custom-icon '$folderDir/$folder' '$iconDir/$icon'";
}
