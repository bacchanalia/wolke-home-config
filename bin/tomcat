#!/bin/bash
export JAVA_HOME=/usr/lib/jvm/java-1.5.0-sun

if [ "$#" -ne "1" ]
then
  echo "Usage: tomcat [start|stop|restart]"
  exit
fi

if [ "$1" = "start" ]
then
  echo Starting Tomcat:
  /usr/share/tomcat6/bin/startup.sh
  echo
elif [ "$1" = "stop" ]
then
  echo Stopping Tomcat:
  /usr/share/tomcat6/bin/shutdown.sh
  echo
elif [ "$1" = "restart" ]
then
  $0 stop
  $0 start
else
  echo "Usage: tomcat [start|stop|restart]"
fi

