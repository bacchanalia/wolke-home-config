#!/usr/bin/perl
use strict;
use warnings;

my $src = '/media/stuff';
my $dest = '/media/BACKUP_STUFF';

if(not -e $src){
  die "Source not found: $src\n";
}
if(not -e $dest){
  die "Destination not found: $dest\n";
}

my @excludes = (
);
my $exclude = '';
for my $ex(@excludes){
  $exclude .= "--exclude=$ex ";
}


my $cmd = "sudo rsync -av --progress --delete-during $exclude $src/ $dest";
print "Press enter to run, or ctrl+c to quit:\n";
print "$cmd\n";
if(readline){
  exec $cmd;
}
