#!/bin/bash
LPR="hl5370dwlpr-2.0.3-1.i386.deb"
CUPS="cupswrapperHL5370DW-2.0.4-1.i386.deb"

sudo apt-get install tcsh
sudo apt-get install ia32-libs
sudo mkdir -p /var/spool/lpd
sudo mkdir -p /usr/share/cups/model
cd
wget http://www.brother.com/pub/bsc/linux/dlf/$LPR
wget http://www.brother.com/pub/bsc/linux/dlf/$CUPS
sudo dpkg --force-architecture -i $LPR
sudo dpkg --force-architecture -i $CUPS
rm $LPR
rm $CUPS

echo if that worked, you should do this:
echo System->Administration->Printing
echo delete hl5370-dw
echo add, network-printer, find with empty host
echo select Brother HL-5370DW \(BRN**********, 192.168.*.*\)
echo change connection before Forward: LDP network printer via DNS-SD
echo close jockey-gtk
echo driver is near the top: HL-5370DW for CUPS, then

