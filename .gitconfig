[user]
	email = elliot.wolk@gmail.com
	name = Elliot Wolk
[alias]
	ci = commit
	s = status
	sta = status
	stat = diff --stat
	unstage = reset HEAD
	vimdiff = difftool -t vimdiff
	gvimdiff = difftool -t gvimdiff
	meld = difftool -t meld
	graph = log --graph --oneline --color --decorate
	showm = show -M --summary
	ignored = ls-files --others
	l = log --color --decorate
	lf = log --color --decorate --follow
	logn = log --color --decorate --name-status -M
[color]
	status = true
[push]
	default = simple
