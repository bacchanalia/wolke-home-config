#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

sub main(@) {
    my $backupDir = shift || guessBackupDir;

    run "./install-git"

    run "rsync", "-av", "$backupDir/.gitconfig", $ENV{HOME};
    run "rsync", "-av", "$backupDir/.ssh"      , $ENV{HOME};

    cd $ENV{HOME};
    run "git", "clone", $git, "git-home";
    run qw(rsync -av git-home/ .);
    run qw(rm -rf git-home);
}

main @_;

