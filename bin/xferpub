#!/bin/bash

SOURCE=ewolk@dev.escribeonline.com
echo Oh Hai!
echo

echo Clearing bin-
sudo -u tomcat rm -f /opt/escribe/publisher/bin/*
echo

echo Clearing templates-
sudo -u tomcat rm -f /opt/escribe/publisher/templates/*
echo

echo Clearing pdfwork-
sudo -u tomcat rm -rf /var/opt/escribe/publisher/pdfwork
sudo -u tomcat mkdir /var/opt/escribe/publisher/pdfwork
echo

echo Clearing work-
sudo -u tomcat rm -rf /var/opt/escribe/publisher/work/*
echo


echo Copying $SOURCE:bin
sudo -u tomcat scp -r $SOURCE:/opt/escribe/publisher/bin/* /opt/escribe/publisher/bin
echo

echo Copying $SOURCE:templates
sudo -u tomcat scp -r $SOURCE:/opt/escribe/publisher/templates/* /opt/escribe/publisher/templates
echo Done!
echo


