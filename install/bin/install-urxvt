#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

sub installFromDir($);

sub main(@) {
    # TODO do not assume configured git-src dir
    #      probably easier to get from a deb that from git
    #      as git is missing libs
    run qw(sudo apt-get -y build-dep rxvt-unicode-256color);
    installFromDir "$ENV{HOME}/Code/rxvt-unicode";
}

main @ARGV;

