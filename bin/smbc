#!/usr/bin/perl
use strict;
use warnings;

sub url($){
  return "http://www.smbc-comics.com/index.php?db=comics&id=$_[0]#comic";
}

sub main(@){
  my @ids;
  if(@_ == 1 and $_[0] =~ /^(\d+)-(\d+)$/){
    @ids = ($1..$2);
  }else{
    @ids = @_;
  }
  my @urls = map {url $_} @ids;
  system "firefox", @urls;
}
&main(@ARGV);
