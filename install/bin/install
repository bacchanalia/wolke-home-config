#!/usr/bin/perl
use strict;
use warnings;
use ScriptScript;

sub main(@) {
    getRoot @_;

    my $backupDir = shift || guessBackupDir;

    ### install xmonad
    run "backup-home";
    run "get-on-wifi", $backupDir;
    run "sync-home", $backupDir;
    run "sync-root";
    run "set-up-sudoers";
    run "install-apt-packages";
    #run "install-git"
    run "install-xmonad-taffybar";
    #run "set-up-autologin";

    ### install other
    #run "install-urxvt"
    #run "install-klomp"
    # bash_completion
    # fstab
    # grub
    # notify
    # plymouth
    # update all
    # userhaskell
    #   cabal packages
}

main @ARGV;

