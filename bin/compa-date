#!/usr/bin/perl
use strict;
use warnings;

my $day = `date +%A`;
chomp $day;
my $date = `date +%d`;
chomp $date;
my $mon = `date +%b`;
chomp $mon;

print
'<span ' .
  'font-family="monospace" ' .
  'size="x-small" ' .
  'fgcolor="#6699ff" ' .
  'bgcolor="#222222" ' .
'>' .
  "$day\n$mon $date" .
'</span>';
