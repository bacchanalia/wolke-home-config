#!/bin/bash
echo; echo;
read -p "Install latest EVIL SHITTY PROPRIETARY nvidia-current (y/N)?"
if [ "$REPLY" == "y" ]; then
  sudo add-apt-repository ppa:ubuntu-x-swat/x-updates
  sudo bash -c " \
    echo cd /lib/modules/$(uname -r)/source/arch/x86/include
    echo cp generated/asm/unistd*.h ./asm
  "
  sudo apt-get install --reinstall nvidia-current
fi

echo; echo;
read -p "Incude non-free software (y/N)?"
if [ "$REPLY" == "y" ]; then
  echo
  echo installing ubuntu-restricted-extras
  sudo apt-get install ubuntu-restricted-extras
  
  echo
  echo Installing non-free encrypted dvd reader
  sudo /usr/share/doc/libdvdread4/install-css.sh
  
fi

