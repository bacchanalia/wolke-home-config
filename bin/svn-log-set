#!/usr/bin/perl
use strict;
use warnings;

my $rev = shift;
$rev = '' if not defined $rev;
if($rev !~ /^\d+$/){
  die "Usage: $0 <rev> <comment> ...\n" .
    "  simply runs: `svn propset --revprop -r <rev> svn:log <comment>'";
}

my $comment = join ' ', @ARGV;
$comment =~ s/'/'\\''/;
system "svn propset --revprop -r $rev svn:log '$comment'"
