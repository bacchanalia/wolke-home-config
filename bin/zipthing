#!/usr/bin/perl
use strict;
use warnings;

my $filename = shift;
open INFH, $filename or die "Error opening $filename for reading\n";
my @zipfiles = <INFH>;

foreach my $file (@zipfiles){
  chomp $file;
  #print $file;
  my $info = `unzip -Z $file`;
  #print $info;
  $info =~ /\n([0-9]*) file\,/;
  my $numFiles = $1;
  #print "\n-$numFiles-\n";
  $info =~ /([0-9]*) BX defN/;
  my $size = $1;
  #print "\n-$size-\n";
  print "$file $numFiles $size\n";
}

