#!/usr/bin/perl
use strict;
use warnings;

my $host = shift;
my @ipGuesses = @ARGV;
if(not defined $host or @ipGuesses == 0){
  die "Usage: $0 <hostname> ip-guess ip-guess ...\n" 
}

sub quickPingable($){
  print "trying $_[0]\n";
  system "ping $_[0] -c 1 -w 1 >/dev/null 2>/dev/null";
  my $code = $?;
  return $code == 0;
}

while(1){
  if(quickPingable $host){
    exit 0;
  }
  if(@ipGuesses == 0){
    die "no dice\n";
  }
  my $ip = shift @ipGuesses;
  quickPingable $ip;
}

