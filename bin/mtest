#!/usr/bin/perl
use strict;
use warnings;

my @mvnCmd = ("mvn", "-Dcheckstyle.skip=true", "-Psdm", "-Pdev", "test");

my $usage = "Usage:
  $0 [ARGS]
    run \"@mvnCmd ARGS\"
";

sub main(@){
  my @cmd = @mvnCmd;
  @cmd = (@cmd, @_);

  print "@cmd\n";
  system @cmd;
  my $exitCode = $?;
  system "alarm", "-s", ($exitCode == 0 ? "success" : "failure");
  exit $exitCode;
}

&main(@ARGV);
