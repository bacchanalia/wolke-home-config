#!/bin/bash
SRC=~/Desktop/Music
DEST=/media/mmc1/Music
qupdate
echo
echo
echo moving files around on the destination to prepare for library sync
presync $SRC/Library root@`n900`:$DEST/Library
echo
echo
echo Syncing library, sans flac
rsync -av --exclude=*.flac --del $SRC/Library/ root@`n900`:$DEST/Library
echo
echo
echo moving files around on the destination to prepare for flacmirror sync
presync $SRC/flacmirror root@`n900`:$DEST/flacmirror
echo
echo
echo Syncing flacmirror oggs
rsync -av $SRC/flacmirror/ --del root@`n900`:$DEST/flacmirror
echo
echo
echo chown $DEST on n900
ssh root@`n900` chown user.users -R $DEST
