#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

sub installGqlplus();
sub getDebAlien($$);
sub getPkg($$$);

my $version = '11.2.0.3.0';
my $majMinVersion = $version;
$majMinVersion =~ s/^(\d+\.\d+).*/$1/;

my $gqlplusVersion = "1.16";
my $gqlplusTar = "gqlplus-$gqlplusVersion.tar.gz";
my $gqlplusUrl = "http://downloads.sourceforge.net/project/gqlplus/gqlplus/1.16/$gqlplusTar";

my $pkgDir = "/media/stuff/Images/sqlplus";
my $ldConf = "/etc/ld.so.conf.d/oracle.conf";
my $libDir = "/usr/lib/oracle/$majMinVersion/client64/lib/";

sub main(@) {
    getRoot();
    run "apt-get", "install", "libaio1";

    installGqlplus();

    my $basicDeb = getDebAlien "basic", $version;
    my $sqlplusDeb = getDebAlien "sqlplus", $version;

    tryrun "apt-get", "remove", "oracle-instantclient.*";
    shell "dpkg -i $basicDeb";
    shell "dpkg -i $sqlplusDeb";

    my $sqlplus = "/usr/bin/sqlplus";
    my $sqlplus64 = "/usr/bin/sqlplus64";
    if(-l $sqlplus and -e $sqlplus64){
      run "rm", $sqlplus;
      run "ln", "-s", $sqlplus64, $sqlplus;
    }

    open FH, "> $ldConf";
    print FH "$libDir\n";
    close FH;

    run "ldconfig";
}

sub installGqlplus(){
  chdir $pkgDir;
  $ENV{PWD} = $pkgDir;

  if(not -f "$pkgDir/$gqlplusTar"){
    run "wget", $gqlplusUrl;
  }
  if(not -f "$pkgDir/$gqlplusTar"){
    die "Error downloading gqlplus from $gqlplusUrl\n";
  }
  my $srcDir = "gqlplus-$gqlplusVersion";
  run "rm", "-rf", "$pkgDir/$srcDir/";
  run "tar", "-xf", $gqlplusTar;
  if(not -d "$pkgDir/$srcDir"){
    die "Error extracting $gqlplusTar\n";
  }

  chdir "$pkgDir/$srcDir";
  $ENV{PWD} = "$pkgDir/$srcDir";
  if(-f "gqlplus"){
    die "gqlplus executable already exists\n";
  }
  run "./configure";
  run "make";
  if(not -f "gqlplus"){
    die "gqlplus build failed\n";
  }
  run "cp", "gqlplus", "/usr/bin";
  chdir $pkgDir;
  $ENV{PWD} = $pkgDir;

  run "rm", "-rf", "$pkgDir/$srcDir";
}

sub getDebAlien($$){
  my ($name, $version) = @_;
  my $rpm = getPkg $name, $version, "rpm";
  die "Missing oracle instantclient garbage $name v$version\n" if not -e $rpm;

  my $deb = getPkg $name, $version, "deb";

  return $deb if -e $deb;

  print "making alien deb for $rpm\n";
  chdir $pkgDir;
  $ENV{PWD} = $pkgDir;

  run "alien", "--to-deb", $rpm;
  $deb = getPkg $name, $version, "deb";

  die "Could not make $deb\n" if not -e $deb;
  run "chown", getUsername() . ".", $deb;

  return $deb;
}

sub getPkg($$$){
  my ($name, $version, $suffix) = @_;
  my $pkg = `ls $pkgDir/oracle*$name*$version*.$suffix 2>/dev/null`;
  chomp $pkg;
  return $pkg;
}

&main(@ARGV);
