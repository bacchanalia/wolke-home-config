#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

sub main(@) {
    my $srcdir = "$ENV{HOME}/Code/klomp";

    if(-d $srcdir) {
        cd $srcdir;
        shell "git pull";
    } else {
        shell "git clone https://github.com/git/git.git $srcdir"
        cd $srcdir;
    }

    shell "yes | ./dependency-install.pl";
    shell "./install.pl"
}

main @ARGV;

