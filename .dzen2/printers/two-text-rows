#!/usr/bin/perl
use strict;
use warnings;

my $top = shift;
$top = '' if not defined $top;
my $bot = shift;
$bot = '' if not defined $bot;
my $height = shift;
$height = 24 if not defined $height;

sub raise($){
  my $text = shift;
  return "^p(;-10)$text^p(;10)";
}
sub lower($){
  my $text = shift;
  return "^p(;6)$text^p(;-6)";
}
sub stripMarkup($){
  my $markup = shift;
  $markup =~ s/\^\^/A/gsxi;
  $markup =~ s/\^[a-z]+\([^)]*\)//gsxi;
  return $markup;
}

my $fst;
my $snd;

if(length stripMarkup $top > length stripMarkup $bot){
  $fst = lower($bot);
  $snd = raise($top);
}else{
  $fst = raise($top);
  $snd = lower($bot);
}

print ''
  . '^p(_LOCK_X)'
  . $fst
  . '^ib(1)'
  . '^p(_UNLOCK_X)'
  . $snd
  . '^ib(0)'
  . "\n"
  ;

