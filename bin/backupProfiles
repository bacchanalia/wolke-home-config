#!/bin/bash

BAK_DIR=Backup/profiles/`date +%s_%Y-%m-%d`

mkdir -p ~/$BAK_DIR
cp -ar ~/.vimrc ~/$BAK_DIR
cp -ar ~/.gvimrc ~/$BAK_DIR
cp -ar ~/.profile ~/$BAK_DIR
cp -ar ~/.bashrc ~/$BAK_DIR
cp -ar ~/.Xmodmap ~/$BAK_DIR
cp -ar ~/.xinitrc ~/$BAK_DIR
cp -ar ~/install.sh ~/$BAK_DIR
cp -ar ~/.sudoers_default ~/$BAK_DIR
cp -ar /etc/default/grub ~/$BAK_DIR
cp -ar ~/compiz.profile ~/$BAK_DIR

scp -r ~/$BAK_DIR wolk@`extip`:~/$BAK_DIR
