#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

sub main(@){
  run qw(sudo update-command-not-found);
  run "sudo", which "escribe-hosts";

  run qw(sudo rm /etc/localtime);
  run qw(sudo ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime);
}

&main(@ARGV);
