#!/usr/bin/perl
use strict;
use warnings;

my $arg = shift;
$arg = '' if not defined $arg;

my $baseVolume = 65536;

my $hbin = `echo -n \$HOME/bin`;
my $vol = `$hbin/pulse-volume`;
chomp $vol;

$vol += 6;
if($arg ne '-f' and $vol >= 150){
  $vol = 150;
}

my $pulseVol = int($baseVolume * ($vol / 100.0));
system "pacmd", "set-sink-volume", 0, $pulseVol;

