#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

sub main(@) {
    my $backupDir = shift || guessBackupDir;
    my @patterns = readConf "../home-desc/sync";
    @patterns = map {s/\/$//; $_} @patterns;

    cd $backupDir;
    shell "rsync -avcP @patterns $ENV{HOME}";
}

main @ARGV;
