#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

sub main(@) {
    getRoot @_;

    run "apt-get", "install", "tp-smapi-dkms";
    installFromGit "git://github.com/teleshoes/tpbattstat.git", ''
      . " ./install.sh;"
      . " cd led-controls; ./install-led-controls.sh;"
      ;
    installFromDir "$ENV{HOME}/install/thinkpad_acpi";
}

main @ARGV;
