#!/usr/bin/perl
use strict;
use warnings;

my $fileList1 = shift;
my $fileList2 = shift;


open INFH1, $fileList1 or
die "Error opening $fileList1 for reading\n";
my @files1 = <INFH1>;
close INFH1;

open INFH2, $fileList2 or
die "Error opening $fileList2 for reading\n";
my @files2 = <INFH2>;
close INFH2;

print "PRESENT IN $fileList1, MISSING IN $fileList2\n";
for my $f1(@files1){
  my $found = 0;
  for my $f2(@files2){
    if($f1 eq $f2){
      $found = 1;
      last;
    }
  }
  if(not $found){
    print $f1;
  }
}

print '*'x80 . "\n\n\n" . '*'x80;

print "PRESENT IN $fileList2, MISSING IN $fileList1\n";
for my $f2(@files2){
  my $found = 0;
  for my $f1(@files1){
    if($f1 eq $f2){
      $found = 1;
      last;
    }
  }
  if(not $found){
    print $f2;
  }
}


