#!/usr/bin/perl
use strict;
use warnings;

sub run(@);

my $arcBees = "https://plus.google.com/hangouts/_/arcbees.com";

my %hangouts = (
  standup => "$arcBees/daily-standup",
);

sub main(@){
  run "sudo", "modprobe", "-r", "uvcvideo";
  run "chromium", "--url", $hangouts{standup};
  run "pkill", "-f", "Google";
}

sub run(@){
  print "@_\n";
  system @_;
}

&main(@ARGV);
