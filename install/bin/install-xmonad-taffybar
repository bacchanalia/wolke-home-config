#!/usr/bin/perl
use strict;
use warnings;
use ScriptScript;

sub installFromDir($);

sub main(@) {
    run qw(sudo apt-get install git haskell-platform xmonad
                                libcairo2-dev
                                libglib2.0-dev
                                libgtk2.0-dev
                                libpango1.0-dev
                                libxml2-dev
          );
    run qw(cabal update);
    run qw(cabal install gtk2hs-buildtools
                         errors
                         json
                         posix-timer
                         regex-pcre
          );

    $ENV{PATH} = "$ENV{HOME}/.cabal/bin:$ENV{PATH}";
    installFromDir "$ENV{HOME}/Code/taffybar";
    installFromDir "$ENV{HOME}/Code/tpbattstat-applet";

    # TODO maybe someday man and fish and live in peace
    run qw(sudo apt-get -y purge mdm);
}

main @ARGV;

