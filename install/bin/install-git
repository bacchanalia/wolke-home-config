#!/usr/bin/perl
use strict;
use warnings;
use ScriptScript;

sub installFromDir($);

sub main(@) {
    # TODO do not assume configured src dir
    run qw(sudo apt-get -y build-dep git);
    cd "$ENV{HOME}/Code/git";
    shell "make -j all";
    shell "sudo make install";
    tryrun qw(sudo rm /etc/bash_completion.d/git-prompt);
}

main @ARGV;

