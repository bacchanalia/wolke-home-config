#!/usr/bin/perl
use strict;
use warnings;

use Lingua::JA::Romanize::Japanese;

if(@ARGV != 1){
  die "Usage: $0 <kanji-kana-mixed-string>\n".
    "  Converts hiragana, katakana and kanji to romaji\n";
}

my $jap = shift;
utf8::decode($jap);
my $conv = Lingua::JA::Romanize::Japanese->new();
print $conv->chars($jap);
