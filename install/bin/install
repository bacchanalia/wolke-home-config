#!/usr/bin/perl
use strict;
use warnings;
use ScriptScript;

sub main(@) {
    getRoot @_;

    my $backupDir = shift || guessBackupDir;

    run "get-on-wifi", $backupDir;
    run "sync-home", $backupDir;
    run "sync-root";
    run "set-up-sudoers";
    run "install-apt-packages";
    run "install-xmonad-taffybar";
    # install others
    #   urxvt
    #   tpbattstat
    #   klomp
    #   userhaskell
    #       cabal packages
    # update all

    # autologin
    # bash_completion
    # fstab
    # grub
    # notify
    # plymouth
}

main @ARGV;

