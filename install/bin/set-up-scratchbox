#!/usr/bin/perl
use strict;
use warnings;

my $script = "$ENV{HOME}/install/bin/harmattan-sdk-setup.py";

my $dir = "$ENV{HOME}/Desktop/Software/scratchbox";
my @rootstraps = qw(
  arm-public-sdk-rootstrap.tgz
  i386-public-sdk-rootstrap.tgz
);

for my $f((@rootstraps, $script)){
  if(not -e "$dir/$f"){
    die "Missing file: $dir/$f\n";
  }
}

print "REMEMBER TO DO:
/scratchbox/login
sb-menu
  {SELECT}
  {ARMEL}
";
system "sudo", "python", $script, "admininstall";

