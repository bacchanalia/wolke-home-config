#!/bin/bash


case "$1" in
  'dev') NAME=eScribePortal.war
  ;;
  'prod') NAME=eScribePortal-prod.war
  ;;
  *)   echo "Usage: $0 [dev|prod]"; exit
  ;;
esac

echo backing up eScribePortal.war to eScribePortal.war_xferbak
sudo -u tomcat mv /opt/tomcat/webapps/eScribePortal.war /opt/tomcat/webapps/eScribePortal.war_xferbak
echo removing eScribePortal/
sudo -u tomcat rm -rf /opt/tomcat/webapps/eScribePortal
echo copying $NAME from dev:/opt/tomcat/webapps
sudo -u tomcat scp ewolk@dev.escribeonline.com:/opt/tomcat/webapps/$NAME /opt/tomcat/webapps/eScribePortal.war

