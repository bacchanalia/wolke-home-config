#!/usr/bin/perl
use strict;
use warnings;

my $dev = "SynPS/2 Synaptics TouchPad";
my $prop = "Synaptics Tap Time";
my $gconfKey = '/desktop/gnome/peripherals/tap_to_click';

sub readTapToClick(){
  my $line = `xinput list-props '$dev' | grep '$prop'`;
  if($line =~ /:\s*(\d+)/){
    return $1 > 0 ? 'on' : 'off';
  }else{
    return 'error';
  }
}
sub writeTapToClick($){
  my $arg = shift;
  system "xinput", "set-prop", $dev, $prop,
    ($arg eq 'on' ? '50' : '0');
  system "gconftool", "-s", $gconfKey, '-t', 'bool',
    ($arg eq 'on' ? 'true' : 'false');
}

my $arg = lc (shift() || '');

if($arg eq ''){
  print readTapToClick() . "\n";
}elsif($arg eq 'on'){
  writeTapToClick 'on';
}elsif($arg eq 'off'){
  writeTapToClick 'off';
}elsif($arg eq 'toggle'){
  writeTapToClick(readTapToClick eq 'on' ? 'off' : 'on');
}else{
  die "Usage: $0   or   $0 [on|off|toggle]\n";
}

