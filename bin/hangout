#!/usr/bin/perl
use strict;
use warnings;

sub run(@);

my $hangout = "https://plus.google.com/hangouts/_/arcbees.com/daily-standup";

sub main(@){
  run "sudo", "modprobe", "-r", "uvcvideo";
  run "chromium", "--url", $hangout;
  run "pkill", "-f", "Google";
}

sub run(@){
  print "@_\n";
  system @_;
}

&main(@ARGV);
