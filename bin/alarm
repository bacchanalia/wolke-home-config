#!/usr/bin/perl
use strict;
use warnings;

my $lib="/home/wolke/Desktop/Music/Library";
my $default = "LBA2 - Soundtrack/08 - LBA's Theme.mp3";
#my $default "ZoÃ« Keating/Into the Trees (Deluxe Edition)/01 Forest.flac"

if(@ARGV != 0 and @ARGV != 1){
  die "Usage: $0 <song>\n" .
      "  song is optional\n" .
      "  can be relative to $lib or absolute\n" .
      "  default is $default\n";
}

my $song = "$lib/$default";

my $arg = shift;
if(defined $arg){
  if(-e $arg){
    $song = $arg;
  }elsif(-e "$lib/$arg"){
    $song = "$lib/$arg";
  }
}

$song =~ s/'/'\\''/g;
system "DISPLAY=:0 term -x mplayer '$song'";
