#!/usr/bin/perl
use strict;
use warnings;

my $dev = "SynPS/2 Synaptics TouchPad";
my $prop = "Synaptics Tap Time";

sub readTapToClick(){
  my $line = `xinput list-props '$dev' | grep '$prop'`;
  if($line =~ /:\s*(\d+)/){
    return $1 > 0 ? 'on' : 'off';
  }else{
    return 'error';
  }
}
sub writeTapToClick($){
  my $val = $_[0] eq 'on' ? 50 : 0;
  system "xinput set-prop '$dev' '$prop' $val";
}

my $arg = lc (shift() || '');

if($arg eq ''){
  print readTapToClick() . "\n";
}elsif($arg eq 'on'){
  writeTapToClick 'on';
}elsif($arg eq 'off'){
  writeTapToClick 'off';
}elsif($arg eq 'toggle'){
  writeTapToClick(readTapToClick eq 'on' ? 'off' : 'on');
}else{
  die "Usage: $0   or   $0 [on|off|toggle]\n";
}

