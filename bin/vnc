#!/usr/bin/perl
use strict;
use warnings;
use Time::HiRes qw(sleep);

my $sshControlFile = '/tmp/vncSSH.ctl';
my $port = '5900';
my $delay = 5000;

my @server = (
  "x11vnc",
    "-safer", "-localhost", "-nopw", "-once",
    "-display", ":0",
);
my @client = (
  "vncviewer",
    "localhost:0",
    "-quality", "0",
    "-compresslevel", "1",
);
my @sshBind = (
  "ssh", "-f",
    "-S", $sshControlFile,
    "-L", "$port:localhost:$port",
);
my @sshExit = (
  "ssh",
    "-S", $sshControlFile,
    "-O", "exit",
    "localhost",
);

sub main(@){
  my $arg = shift();
  die "Usage: $0 host   or  $0 off\n" if not defined $arg or @_ > 0;
  if($arg eq 'off'){
    exec @sshExit;
  }else{
    system @sshExit;
    my $host = $arg;

    system @sshBind, $host, "@server";
    exit $? if $? != 0;

    sleep $delay/1000;

    system @client;
  }
}

&main(@ARGV);
