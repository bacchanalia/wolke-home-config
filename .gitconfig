[user]
  email = elliot.wolk@gmail.com
  name = Elliot Wolk
[core]
  pager = less
  quotepath = false
[alias]
  ci = commit
  cp = cherry-pick
  cpcon = cherry-pick --continue
  s = ! \
      cd ${GIT_PREFIX:-.} && \
      git status $@ && \
      stashes=`git stash list | wc -l` && \
      [ $stashes -gt 0 ] && echo $stashes stashes && \
      true
  r = rebase --autostash
  pullr = !git stash && git pull -r && git stash pop
  sta = status
  stat = show --stat
  unstage = reset HEAD
  vimdiff = difftool -t vimdiff -y
  gvimdiff = difftool -t gvimdiff -y
  meld = difftool -t meld -y
  graph = log --graph --oneline --color --decorate
  showm = show -M --summary
  ignored = ls-files --others
  l = log --color --decorate
  lf = log --color --decorate --follow
  logn = log --color --decorate --name-status -M
  lognotes = log --color --decorate --name-status -M \
             --notes=review --notes=bug --notes=dd
  logauthor = ! \
              cd ${GIT_PREFIX:-.} && \
              git log $@ --format='%h|%f|%ad|%cd|%an|%cn|%ae|%ce' \
              | awk -F '|' '"{                                    \
                h=$1;f=$2;ad=$3;cd=$4;an=$5;cn=$6;ae=$7;ce=$8;    \
                diffcolor=35;                                     \
                samecolor=36;                                     \
                if (an != cn || ae != ce || ad != cd)             \
                  printf                                          \
                    \"\\033[%dms%s %s\\033[0m\\n\"                \
                    \"  %s  %-20s %-40s\\n\"                      \
                    \"  %s  %-20s %-40s\\n\"                      \
                    ,                                             \
                    diffcolor, h, f, ad, an, ae, cd, cn, ce;      \
                else                                              \
                  printf                                          \
                    \"\\033[%dms%s %s\\033[0m\\n\"                \
                    \"  %s  %-20s %-40s\\n\"                      \
                    ,                                             \
                    samecolor, h, f, ad, an, ae;                  \
              }"'                                                 \
              | less -SR                                          \
              && true
[color]
  status = true
[push]
  default = simple
[gui]
  gcwarning = false
