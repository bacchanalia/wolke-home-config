#!/usr/bin/perl
use strict;
use warnings;
use ScriptScript;

sub main(@) {
    getRoot @_;

    my $backupDir = shift || guessBackupDir;

    run "backup-home";
    run "sync-home", $backupDir;
    run "get-on-wifi", $backupDir;
    run "sync-root";
    run "set-up-sudoers";
    run "install-apt-packages";
    run "install-git"
    run "install-xmonad-taffybar";
    run "set-up-autologin";

    run "install-urxvt"
    run "install-klomp"

    run "set-up-grub"
    # notify
    # plymouth

    # userhaskell
    #   cabal packages
    #   KitchenSink

    # update all
}

main @ARGV;

