#!/usr/bin/perl
use strict;
use warnings;

my $test = '/media/BACKUP_HOME';
while(not -e $test){
  print "$test does not exist, sleep and try again..\n";
  sleep 1;
}
system "backupHome";
system "backupStuff";
my $cmd = "sudo umount /media/BACKUP_*";
print "Press enter to run, or ctrl+c to quit:\n$cmd\n";
<STDIN>;
system "$cmd";

if(-e $test){
  print "WHOA, $test still exists\n";
}else{
  print "$test doesnt exist, so youre probably cool on removing the hd\n";
}
