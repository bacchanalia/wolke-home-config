#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

sub main(@) {
    run qw(sudo apt-get install git haskell-platform xmonad
                                libcairo2-dev
                                libglib2.0-dev
                                libgtk2.0-dev
                                libpango1.0-dev
                                libxml2-dev
          );
    run qw(cabal update);
    run qw(cabal install gtk2hs-buildtools
                         errors
                         json
                         posix-timer
                         regex-pcre
          );

    $ENV{PATH} = "$ENV{HOME}/.cabal/bin:$ENV{PATH}";
    installFromGit "git://github.com/teleshoes/taffybar.git";
    installFromGit "git://github.com/teleshoes/tpbattstat.git";

    my @dm = qw(mdm gdm kdm lightdm slim wdm xdm nodm);
    tryrun qw(sudo pkill -f), $_ foreach @dm;
    run qw(sudo apt-get -y purge), @dm;
}

main @ARGV;
