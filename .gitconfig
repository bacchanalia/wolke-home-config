[user]
	email = elliot.wolk@gmail.com
	name = Elliot Wolk
[alias]
	ci = commit
	sta = status
	stat = diff --stat
	unstage = reset HEAD
	vimdiff = difftool -t vimdiff
	gvimdiff = difftool -t gvimdiff
	meld = difftool -t meld
	graph = log --graph --oneline --color
	ignored = ls-files --others -i --exclude-standard
[color]
	status = true
[push]
	default = simple
